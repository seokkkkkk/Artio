<div class="profile-container">
    <div class="follow">
        <div class="follower">
            <span class="follow-count">0</span>
            <p class="follow-text">Followers</p>
        </div>
        <div class="following">
            <span class="follow-count">0</span>
            <p class="follow-text">Following</p>
        </div>
    </div>
    <img
        class="profile-image"
        src="../../uploads/profile_images/default-profile.png"
        alt="프로필 이미지"
    />
    <div class="profile-info">
        <div>
            <h1 class="profile-name">John Doe</h1>
            <% if (loggedInUserId === params.id) { %>
            <div id="right-button">
                <button
                    id="edit-profile-btn"
                    onclick="window.location.href='/profile/edit'"
                >
                    정보수정
                </button>
                <button id="delete-account-btn">회원탈퇴</button>
            </div>

            <% } else { %>
            <button id="follow-button">팔로우</button>
            <% } %>
        </div>
        <p class="bio">
            Lorem ipsum dolor sit amet, consectetur adipiscing elit.
        </p>
    </div>
</div>
<div class="feed"></div>

<script src="/script/profile.js"></script>
